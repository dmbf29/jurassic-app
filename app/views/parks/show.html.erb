<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @park.banner_url %>);">
  <div class="container">
    <h1><%= @park.name %></h1>
    <%= link_to new_park_dinosaur_path(@park), class: 'btn btn-success' do %>
      +ðŸ¦–
    <% end %>
    <!-- <a class="btn btn-flat" href="#">Apply now</a> -->
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col">
      <div class="cards my-5">
        <% @park.dinosaurs.each do |dinosaur| %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= dinosaur.image_url %>)">
            <%= dinosaur.name %>
            <%= link_to dinosaur_path(dinosaur), method: :delete, data: {confirm: "Annihilate #{dinosaur.name}?" }, class: 'card-remove-link' do %>
              <i class="fas fa-meteor"></i>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>